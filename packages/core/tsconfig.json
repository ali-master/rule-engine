{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@root": ["./src"],
      "@root/*": ["./src/*"]
    },
    "strictNullChecks": true,
    "outDir": "dist"
  },
  "include": ["src/**/*", "test/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist", "coverage", ".idea", ".vscode","**/*.d.ts", "**/dist/*"]
}
